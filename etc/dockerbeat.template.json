{
  "mappings": {
    "_default_": {
      "_all": {
        "enabled": true,
        "norms": {
          "enabled": false
        }
      },
      "dynamic_templates": [
        {
          "template1": {
            "mapping": {
              "doc_values": true,
              "ignore_above": 1024,
              "index": "not_analyzed",
              "type": "{dynamic_type}"
            },
            "match": "*"
          }
        }
      ],
      "properties": {
        "memory": {
          "properties": {
            "usage_p": {
              "doc_values": "true",
              "type": "float"
            }
          }
        },
        "cpu": {
          "properties": {
            "percpuUsage": {
              "properties": {
                "cpu*": {
                  "doc_values": "true",
                  "type": "float"
                }
              }
            },
            "totalUsage": {
              "doc_values": "true",
              "type": "float"
            },
            "usageInKernelmode": {
              "doc_values": "true",
              "type": "float"
            },
            "usageInUsermode": {
              "doc_values": "true",
              "type": "float"
            }
          }
        },
        "net": {
          "properties": {
            "rxBytes_ps": {
              "doc_values": "true",
              "type": "float"
            },
            "rxDropped_ps": {
              "doc_values": "true",
              "type": "float"
            },
            "rxErrors_ps": {
              "doc_values": "true",
              "type": "float"
            },
            "rxPackets_ps": {
              "doc_values": "true",
              "type": "float"
            },
            "txBytes_ps": {
              "doc_values": "true",
              "type": "float"
            },
            "txDropped_ps": {
              "doc_values": "true",
              "type": "float"
            },
            "txErrors_ps": {
              "doc_values": "true",
              "type": "float"
            },
            "txPackets_ps": {
              "doc_values": "true",
              "type": "float"
            }
          }
        },
        "timestamp": {
          "type": "date"
        },
        "containerID": {
          "index": "not_analyzed",
          "type": "string"
        }
      }
    }
  },
  "settings": {
    "index.refresh_interval": "5s"
  },
  "template": "dockerbeat-*"
}